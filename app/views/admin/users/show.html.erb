<div class="container my-5">
  <div class="row my-3">
    <div class="col-5">
        <%= flash[:notice] %>
        <h4><%= @user.last_name %><%= @user.first_name %>さんの会員詳細</h4>
        <div class="row my-3">
          <div class="col">
            会員ID
          </div>
          <div class="col">
            <%= @user.id %>
          </div>
        </div>
        <div class="row my-3">
          <div class="col">
            氏名
          </div>
          <div class="col">
            <%= @user.last_name %>　<%= @user.first_name %>
          </div>
        </div>
        <div class="row my-3">
          <div class="col">
            フリガナ
          </div>
          <div class="col">
            <%= @user.last_name_kana %> <%= @user.first_name_kana %>
          </div>
        </div>
        <div class="row my-3">
          <div class="col">
            ハンドルネーム
          </div>
          <div class="col">
            <%= @user.handle_name %>
          </div>
        </div>
        <div class="row my-3">
          <div class="col">
            郵便番号
          </div>
          <div class="col">
            <%= @user.postal_code %>
          </div>
        </div>
        <div class="row my-3">
          <div class="col">
            住所
          </div>
          <div class="col">
            <%= @user.address %>
          </div>
        </div>
        <div class="row my-3">
          <div class="col">
            電話番号
          </div>
          <div class="col">
            <%= @user.telephone_number %>
          </div>
        </div>
        <div class="row my-3">
          <div class="col">
            メールアドレス
          </div>
          <div class="col">
            <%= @user.email %>
          </div>
        </div>
        <div class="row my-3">
          <div class="col">
            生年月日
          </div>
          <div class="col">
            <%= @user.birth_date %>
          </div>
        </div>
        <div class="row my-3">
          <div class="col">
            会員ステータス
          </div>
          <div class="col">
            <%= @user.status_i18n %>
          </div>
        </div>
        <%= link_to "編集する", edit_admin_user_path %>
      </div>

      <div class="col-7">
      <div class="row py-3">
        <div class="col">
          投稿日
        </div>
        <div class="col">
        </div>
        <div class="col">
          タイトル
        </div>
        <div class="col">
          ソロ活難易度
        </div>
      </div>
      <% if @posts.present? %>
        <% @posts.each do |post| %>
          <div class="row">
            <div class="col">
              <%= post.created_at.strftime('%Y/%m/%d %H:%M') %>
            </div>
            <div class="col">
              <%= image_tag post.get_post_image(100, 100), size: "100x100" %>
            </div>
            <div class="col">
              <%= link_to post.title, admin_post_path(post) %>
            </div>
            <div class="col">
              <%= render 'admin/posts/star_rating', post: post %>
            </div>
          </div>
        <% end %>
      <% else %>
        <p>投稿はありません。</p>
      <% end %>
    </div>
  </div>
</div>
