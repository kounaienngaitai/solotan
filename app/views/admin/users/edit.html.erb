<div class="container my-5">
  <%= flash[:notice] %>
  <h4><%= @user.last_name %><%= @user.first_name %>さんの編集画面</h4>
  <%= form_with model: @user, url: admin_user_path(@user), method: :patch, local: true do |f| %>
  <div class="row my-3">
    <div class="col">
      会員ID
    </div>
    <div class="col">
      <%= @user.id %>
    </div>
  </div>
  <div class="row my-3">
    <div class="col">
      氏名
    </div>
    <div class="col">
      <%= f.label :last_name, '(姓)' %>
      <%= f.text_field :last_name %>
      <%= f.label :first_name, '(名)' %>
      <%= f.text_field :first_name %>
    </div>
  </div>
  <div class="row my-3">
    <div class="col">
      フリガナ
    </div>
    <div class="col">
      <%= f.label :last_name_kana, '(ｾｲ)' %>
      <%= f.text_field :last_name_kana %>
      <%= f.label :first_name_kana, '(ﾒｲ)' %>
      <%= f.text_field :first_name_kana %>
    </div>
  </div>
  <div class="row my-3">
    <div class="col">
      ハンドルネーム
    </div>
    <div class="col">
      <%= f.label :handle_name, class: 'hidden-label' %>
      <%= f.text_field :handle_name %>
    </div>
  </div>
  <div class="row my-3">
    <div class="col">
      郵便番号
    </div>
    <div class="col">
      <%= f.label :postal_code, class: 'hidden-label' %>
      <%= f.text_field :postal_code %>
    </div>
  </div>
  <div class="row my-3">
    <div class="col">
      住所
    </div>
    <div class="col">
      <%= f.label :address, class: 'hidden-label' %>
      <%= f.text_field :address %>
    </div>
  </div>
  <div class="row my-3">
    <div class="col">
      電話番号
    </div>
    <div class="col">
      <%= f.label :telephone_number, class: 'hidden-label' %>
      <%= f.text_field :telephone_number %>
    </div>
  </div>
  <div class="row my-3">
    <div class="col">
      メールアドレス
    </div>
    <div class="col">
      <%= f.label :email, 'メールアドレス', class: 'hidden-label' %>
      <%= f.email_field :email, onclick: "alert('フィールドがクリックされました');" %>
    </div>
  </div>
  <div class="row my-3">
    <div class="col">
      生年月日
    </div>
    <div class="col">
      <%= f.label :birth_date, class: 'hidden-label' %>
      <%= f.date_select :birth_date, {start_year: 1920, end_year: 2024} %>
    </div>
  </div>
  <div class="row my-3">
    <div class="col">
      会員ステータス
    </div>
    <div class="col">
      <%= f.label :status, class: 'hidden-label' %>
      <%= f.radio_button :status, 'active' %>有効
      <%= f.radio_button :status, 'suspended' %>使用停止中
      <%= f.radio_button :status, 'withdrawn' %>退会
    </div>
  </div>
  <div class="row my-3">
    <div class="col">
    </div>
    <div class="col">
    <%= f.submit "更新", class: "btn btn-primary" %>
    </div>
  </div>
  <% end %>
</div>

