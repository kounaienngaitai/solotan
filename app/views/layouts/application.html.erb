<!DOCTYPE html>
<html>
  <head>
    <title>Solotan</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/8411b33ea0.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="wrapper">
      <header class="page-header">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
          <div class="container">
            <%= link_to 'SOLOTAN', top_path, class: 'navbar-brand' %>
          </div>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li>
                  <%= link_to users_mypage_path,class: 'nav-link text-light' do %>
                    <i class="fas fa-home"></i> マイページ
                  <% end %>
                </li>
                <li>
                  <%=  link_to posts_path,class: 'nav-link text-light' do %>
                    <i class="fa-solid fa-list"></i> 一覧
                  <% end %>
                </li>
                <li>
                  <%= link_to destroy_user_session_path, method: :delete,class: 'nav-link text-light' do %>
                    <i class="fas fa-sign-out-alt"></i> ログアウト
                  <% end %>
                </li>
              <% elsif admin_signed_in? %>
                <li>
                  <%= link_to admin_top_path,class: 'nav-link text-light' do %>
                    <i class="fas fa-home"></i> 管理者トップページ
                  <% end %>
                </li>
                <li>
                  <%=  link_to admin_users_path,class: 'nav-link text-light' do %>
                    <i class="fa-solid fa-list"></i> 会員一覧
                  <% end %>
                </li>
                <li>
                  <%=  link_to admin_posts_path,class: 'nav-link text-light' do %>
                    <i class="fa-solid fa-list"></i> 一覧
                  <% end %>
                </li>
                <li>
                  <%= link_to destroy_admin_session_path, method: :delete,class: 'nav-link text-light' do %>
                    <i class="fas fa-sign-out-alt"></i> ログアウト
                  <% end %>
                </li>
              <% else %>
                <li>
                  <%= link_to new_user_registration_path,class: 'nav-link text-light' do %>
                    <i class="fas fa-user-plus"></i> 新規登録
                  <% end %>
                </li>
                <li>
                  <%= link_to new_user_session_path ,class: 'nav-link text-light' do %>
                    <i class="fas fa-sign-in-alt"></i> ログイン
                  <% end %>
                </li>
                <li>
                  <%= link_to users_guest_sign_in_path,class: 'nav-link text-light' do %>
                    <i class="fas fa-sign-in-alt"></i> ゲストログイン
                  <% end %>
                </li>
                <li>
                  <%= link_to new_admin_session_path,class: 'nav-link text-light' do %>
                    <i class="fas fa-sign-in-alt"></i> 管理者用
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </nav>
      </header>
      <main class="page-body">
        <%= yield %>
      </main>
      <footer class="page-footer py-3 bg-dark text-light">
        <div class="container text-center">
          <div class="row">
            <div class="col">
              copyright © 2005 SOLOTAN All Rights Reserved.
            </div>
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>
