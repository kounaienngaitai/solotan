<!DOCTYPE html>
<html>
  <head>
    <title>Solotan</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/8411b33ea0.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <%= link_to 'SOLOTAN', top_path, class: 'navbar-brand' %>
      </div>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <li>
              <%= link_to users_mypage_path,class: 'nav-link text-light' do %>
                <i class="fas fa-home"></i> マイページ
              <% end %>
            </li>
            <li>
              <%=  link_to posts_path,class: 'nav-link text-light' do %>
                <i class="fa-solid fa-list"></i> 一覧
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete,class: 'nav-link text-light' do %>
                <i class="fas fa-sign-out-alt"></i> ログアウト
              <% end %>
            </li>
          <% else %>
            <li>
              <%= link_to new_user_registration_path,class: 'nav-link text-light' do %>
                <i class="fas fa-user-plus"></i> 新規登録
              <% end %>
            </li>
            <li>
              <%= link_to new_user_session_path ,class: 'nav-link text-light' do %>
                <i class="fas fa-sign-in-alt"></i> ログイン
              <% end %>
            </li>
            <li>
              <%= link_to users_guest_sign_in_path,class: 'nav-link text-light' do %>
                <i class="fas fa-sign-in-alt"></i> ゲストログイン
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
    <%= yield %>
    <footer class="bg-dark text-white pt-5 pb-4 mt-5">
      <div class="container">
        <div class="row">
          <div class="col-md-12 text-center">
            <p>Copyright © 2005 SOLOTAN All Rights Reserved.</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
