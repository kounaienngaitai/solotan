<div class="container text-center">
<%= flash[:notice] %>
  <div class="row pt-5">
    <div class="col text-center">
      <h1>下書き・非公開一覧画面</h1>
    </div>
  </div>
  <div class="row pt-5">
    <div class="col"></div>
    <div class="col"></div>
    <div class="col"></div>
    <div class="col"></div>
    <div class="col">
      <%= link_to "新規作成", new_post_path %>
    </div>
  </div>
  <div class="row py-3">
    <div class="col">
      投稿日
    </div>

    <div class="col">
      投稿ユーザー
    </div>

    <div class="col">

    </div>

    <div class="col">
      タイトル
    </div>

    <div class="col">
      ソロ活難易度
    </div>
    <div class="col">
      投稿ステータス
    </div>
  </div>
  <% @posts.each do |post| %>
    <div class="row">

      <div class="col">
        <%= post.created_at.strftime('%Y/%m/%d %H:%M') %>
      </div>

      <div class="col">
        <%= post.user.handle_name %>
      </div>

      <div class="col">
        <%= image_tag post.get_post_image(100, 100), size: "100x100" %>
      </div>

      <div class="col">
        <%= link_to post.title, post_path(post) %>
      </div>

      <div class="col">
        <%= render 'star_rating', post: post %>
      </div>

      <div class="col">
        <%= post.status_i18n %>
      </div>

    </div>
  <% end %>

  <div class="row">
    <div class="col-12 mb-3">
      <%= paginate @posts %>
    </div>
  </div>

</div>