<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="my-5">会員情報編集</h4>
      <%= form_with model: @user, url: users_mypage_update_path, method: :patch do |f| %>
        <table class="table table-borderless">
          <tr>
            <td>プロフィール画像</td>
            <td><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %> </td>
          </tr>

          <tr>
            <td>氏名</td>
            <td><%= f.text_field :last_name %></td>
            <td><%= f.text_field :first_name %></td>
          </tr>

          <tr>
            <td>フリガナ</td>
            <td><%= f.text_field :last_name_kana %></td>
            <td><%= f.text_field :first_name_kana %></td>
          </tr>

          <tr>
            <td>ハンドルネーム</td>
            <td><%= f.text_field :handle_name %></td>
          </tr>

          <tr>
            <td>メールアドレス</td>
            <td><%= f.text_field :email %></td>
            <td></td>
          </tr>

          <tr>
            <td>郵便番号</td>
            <td><%= f.text_field :postal_code %></td>
            <td></td>
          </tr>

          <tr>
            <td>住所</td>
            <td><%= f.text_field :address %></td>
            <td></td>
          </tr>

          <tr>
            <td>電話番号</td>
            <td><%= f.text_field :telephone_number %></td>
            <td></td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "編集内容を保存", class:"btn btn-success" %></td>
            <td><%= link_to "退会する", users_confirm_path, class:"btn btn-danger" %></td>
          </tr>
        </table>
      <% end %>
      <%= link_to "戻る", users_mypage_path %>
    </div>
  </div>
</div>
